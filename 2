#include <iostream>
using namespace std;
void Merge(int a[],int low,int mid,int high);
void MergeSort(int a[],int low,int high);
int main(){
 int n,a[20],i,low,high;
 cout << "Enter number of elements:" << endl;
 cin>>n;
 cout<<"enter array of elements:"<<endl;
 for(i=0;i<n;i++)
 cin>>a[i];
 low=0;high=n-1;
 MergeSort(a,low,high);
 cout<<"Elements after sorting"<<endl;
 for(i=0;i<n;i++)
 cout<<a[i]<<"\t";
 return 0;
}
void MergeSort(int a[],int low,int high){
 int mid;
 if(low<high){
 mid=(low+high)/2;
 MergeSort(a,low,mid);
 MergeSort(a,mid+1,high);
 Merge(a,low,mid,high);
 }
}
void Merge(int a[],int low,int mid,int high){
 int b[30],i,j,k;
 i=k=low;
 j=mid+1;
 while(i<=mid&&j<=high){
 if(a[i]<a[j])
 b[k++]=a[i++];
 else
 b[k++]=a[j++];
 }
 while(i<=mid)
 b[k++]=a[i++];
 while(j<=high)
 b[k++]=a[j++];
 for(i=low;i<k;i++){
 a[i]=b[i];
 }
}
